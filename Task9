public class Task9 {
    public static void main(String[] args) {
        System.out.println(sumDigitsInNumber(546));
    }

    public static int sumDigitsInNumber(int number) {
        int n = 0;
        int sum = 0;
        for (int i = 0; i<3; i++) {
            n = number % 10;
            number = number / 10;
            sum += n;
        }
        return sum;
    }
}
